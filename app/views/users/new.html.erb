<%= form_with model: @user, id: 'register-form',  local: true do |form| %>
  <h2>Sign Up</h2>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, class: 'form-control', placeholder: 'First name', required: true %>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, class: 'form-control', placeholder: 'Last name', required: true %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :email %>
      <%= form.email_field :email, class: 'form-control', placeholder: 'Email', required: true %>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :password %>
      <%= form.password_field :password, pattern: ".{8,20}", required: true, class: 'form-control', placeholder: 'Password'%>
      <small id="passwordHelpBlock" class="form-text text-muted">
        Your password must be 8-20 characters long.
      </small>
    </div>
  </div>
  <%= form.submit 'Sign Up', class: 'btn btn-primary' %>
  <%= link_to 'Sign In', new_session_url %>
<% end %>