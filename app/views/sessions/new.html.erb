<div class="container d-flex align-items-center" style="height: 100vh">
  <%= form_with url: session_url, scope: @user, id: 'login-form', class: 'w-100', local: true do |form| %>
    <h2>Sign In</h2>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= form.label :email %>
        <%= form.email_field :email, class: 'form-control', placeholder: 'Email', required: true %>
      </div>
      <div class="form-group col-md-6">
        <%= form.label :password %>
        <%= form.password_field :password, pattern: ".{8,20}", required: true, class: 'form-control', placeholder: 'Password'%>
      </div>
    </div>
    <%= form.submit 'Sign In', class: 'btn btn-primary mb-2' %><br>
    or you can <%= link_to 'Sign Up', new_user_url %>
  <% end %>
</div>